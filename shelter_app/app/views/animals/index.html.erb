<p id="notice"><%= notice %></p>

<h1>Animals</h1>

<%= render 'form', animal: @animal %>

<table id='animals'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Entry at</th>
      <th>Condition</th>
      <th>Personality</th>
      <th>Age</th>
      <th>Sex</th>
      <th>Color</th>
      <th>Chip</th>
      <th>Hosted in</th>
      <th>Observations</th>
      <th>Shelter</th>
      <th>Rescued from</th>
      <th>Adopter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <%= render 'animal', animal: animal %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Animal', new_shelter_animal_path %>
