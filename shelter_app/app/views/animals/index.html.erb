<p id="notice"><%= notice %></p>

<h1>Animals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Entry at</th>
      <th>Condition</th>
      <th>Personality</th>
      <th>Age</th>
      <th>Sex</th>
      <th>Color</th>
      <th>Chip</th>
      <th>Hosted in</th>
      <th>Observations</th>
      <th>Shelter</th>
      <th>Rescued from</th>
      <th>Adopter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
        <td><%= animal.entry_at %></td>
        <td><%= animal.condition %></td>
        <td><%= animal.personality %></td>
        <td><%= animal.age %></td>
        <td><%= animal.sex %></td>
        <td><%= animal.color %></td>
        <td><%= animal.chip %></td>
        <td><%= animal.hosted_in %></td>
        <td><%= animal.observations %></td>
        <td><%= animal.shelter_id %></td>
        <td><%= animal.rescued_from_id %></td>
        <td><%= animal.adopter_id %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy',  animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

