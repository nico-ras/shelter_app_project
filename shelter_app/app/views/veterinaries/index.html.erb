<p id="notice"><%= notice %></p>

<h1>Shelter veterinaries</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @veterinaries.each do |veterinary| %>
      <tr>
        <td><%= veterinary.first_name %></td>
        <td><%= veterinary.last_name %></td>
        
        <td><%= link_to 'Show', veterinary %></td>
        <td><%= link_to 'Edit', edit_veterinary_path(veterinary) %></td>
        <td><%= link_to 'Destroy', veterinary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

